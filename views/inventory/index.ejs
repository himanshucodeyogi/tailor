<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/nav-admin') %>

  <div class="max-w-7xl mx-auto px-4 py-8">
    <%- include('../partials/flash') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">Inventory Management</h1>

    <!-- Inventory Items Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% items.forEach((item) => { %>
        <div class="bg-white rounded-lg shadow-lg p-6">
          <!-- Item Name -->
          <h3 class="text-xl font-bold text-gray-800 mb-2"><%= item.itemName %></h3>

          <!-- Unit Badge -->
          <div class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded mb-4">
            <%= item.unit %>
          </div>

          <!-- Low Stock Alert -->
          <% if (item.quantity <= item.lowStockThreshold) { %>
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-3 py-2 rounded text-xs font-semibold">
              ⚠️ Low Stock Alert!
            </div>
          <% } %>

          <!-- Current Quantity -->
          <div class="bg-gray-100 rounded-lg p-6 mb-6 text-center">
            <p class="text-gray-600 text-sm mb-2">Current Stock</p>
            <p class="text-4xl font-bold <%= item.quantity <= item.lowStockThreshold ? 'text-red-600' : 'text-blue-600' %>">
              <%= item.quantity %>
            </p>
            <p class="text-xs text-gray-500 mt-1">
              Threshold: <%= item.lowStockThreshold %>
            </p>
          </div>

          <!-- Increment / Decrement -->
          <div class="space-y-3">
            <!-- Decrement -->
            <form action="/admin/inventory/<%= item._id %>/decrement" method="POST" class="space-y-2">
              <div class="flex gap-2">
                <input
                  type="number"
                  name="amount"
                  value="1"
                  min="1"
                  class="flex-1 border border-gray-300 rounded px-3 py-2 text-center focus:outline-none focus:ring-2 focus:ring-red-500"
                />
                <button
                  type="submit"
                  class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded w-14"
                >
                  −
                </button>
              </div>
            </form>

            <!-- Increment -->
            <form action="/admin/inventory/<%= item._id %>/increment" method="POST" class="space-y-2">
              <div class="flex gap-2">
                <input
                  type="number"
                  name="amount"
                  value="1"
                  min="1"
                  class="flex-1 border border-gray-300 rounded px-3 py-2 text-center focus:outline-none focus:ring-2 focus:ring-green-500"
                />
                <button
                  type="submit"
                  class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded w-14"
                >
                  +
                </button>
              </div>
            </form>
          </div>

          <!-- Info -->
          <div class="mt-6 pt-6 border-t border-gray-200 text-xs text-gray-500">
            <p>Last updated: <%= new Date(item.updatedAt).toLocaleDateString() %></p>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Empty State -->
    <% if (!items || items.length === 0) { %>
      <div class="bg-gray-100 rounded-lg p-12 text-center">
        <p class="text-gray-600 text-lg">No inventory items found.</p>
      </div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
