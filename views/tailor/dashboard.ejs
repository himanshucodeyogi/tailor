<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-gray-50 dark:bg-gray-900">
  <%- include('../partials/nav-tailor') %>

  <div class="max-w-7xl mx-auto px-3 sm:px-4 py-6 sm:py-12">
    <%- include('../partials/flash') %>

    <!-- Stats Section -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-6 mb-6 sm:mb-12">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 sm:p-6">
        <div class="flex items-center justify-between gap-3">
          <div>
            <p class="text-gray-600 dark:text-gray-400 text-xs sm:text-sm font-medium">Total Orders</p>
            <p class="text-2xl sm:text-3xl font-bold text-teal-600"><%= stats.totalOrders %></p>
          </div>
          <div class="text-3xl sm:text-4xl text-teal-200">üìã</div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 sm:p-6">
        <div class="flex items-center justify-between gap-3">
          <div>
            <p class="text-gray-600 dark:text-gray-400 text-xs sm:text-sm font-medium">In Progress</p>
            <p class="text-2xl sm:text-3xl font-bold text-yellow-600"><%= stats.inProgress %></p>
          </div>
          <div class="text-3xl sm:text-4xl text-yellow-200">‚öôÔ∏è</div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 sm:p-6">
        <div class="flex items-center justify-between gap-3">
          <div>
            <p class="text-gray-600 dark:text-gray-400 text-xs sm:text-sm font-medium">Ready</p>
            <p class="text-2xl sm:text-3xl font-bold text-green-600"><%= stats.readyForPickup %></p>
          </div>
          <div class="text-3xl sm:text-4xl text-green-200">‚úÖ</div>
        </div>
      </div>
    </div>

    <!-- Orders Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 sm:p-8">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-800 dark:text-white mb-4 sm:mb-6">Active Orders</h2>

      <% if (orders.length === 0) { %>
        <p class="text-gray-500 dark:text-gray-400 text-center py-8 sm:py-12 text-sm sm:text-base">No active orders</p>
      <% } else { %>
        <!-- Desktop Table -->
        <div class="hidden sm:block overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead class="border-b-2 border-gray-200 dark:border-gray-700">
              <tr>
                <th class="px-4 py-3 font-semibold text-gray-700 dark:text-gray-300">Order #</th>
                <th class="px-4 py-3 font-semibold text-gray-700 dark:text-gray-300">Customer</th>
                <th class="px-4 py-3 font-semibold text-gray-700 dark:text-gray-300">Garment</th>
                <th class="px-4 py-3 font-semibold text-gray-700 dark:text-gray-300">Status</th>
                <th class="px-4 py-3 font-semibold text-gray-700 dark:text-gray-300">Due Date</th>
                <th class="px-4 py-3 font-semibold text-gray-700 dark:text-gray-300">Action</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach((order) => { %>
                <tr class="border-b border-gray-100 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition">
                  <td class="px-4 py-3 font-semibold text-gray-800 dark:text-white"><%= order.orderNumber %></td>
                  <td class="px-4 py-3">
                    <div>
                      <p class="font-medium text-gray-800 dark:text-white"><%= order.customer.name %></p>
                      <p class="text-xs text-gray-500 dark:text-gray-400"><%= order.customer.phone %></p>
                    </div>
                  </td>
                  <td class="px-4 py-3 text-gray-700 dark:text-gray-300"><%= order.garmentType %></td>
                  <td class="px-4 py-3">
                    <span class="px-3 py-1 rounded-full text-xs font-semibold
                      <% if (order.status === 'Order Placed') { %>
                        bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-white
                      <% } else if (order.status === 'Cutting') { %>
                        bg-yellow-200 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200
                      <% } else if (order.status === 'In Stitching') { %>
                        bg-blue-200 dark:bg-blue-900 text-blue-800 dark:text-blue-200
                      <% } else if (order.status === 'Final Touches') { %>
                        bg-purple-200 dark:bg-purple-900 text-purple-800 dark:text-purple-200
                      <% } else if (order.status === 'Ready for Pickup') { %>
                        bg-green-200 dark:bg-green-900 text-green-800 dark:text-green-200
                      <% } %>
                    ">
                      <%= order.status %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-gray-700 dark:text-gray-300">
                    <%= order.dueDate ? new Date(order.dueDate).toLocaleDateString() : 'Not set' %>
                  </td>
                  <td class="px-4 py-3">
                    <a href="/tailor/orders/<%= order._id %>" class="text-teal-600 hover:text-teal-800 dark:text-teal-400 dark:hover:text-teal-300 font-medium text-sm">
                      View ‚Üí
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- Mobile Cards -->
        <div class="sm:hidden space-y-3">
          <% orders.forEach((order) => { %>
            <div class="bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg p-4 space-y-3">
              <div class="flex justify-between items-start gap-2">
                <div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">Order #</p>
                  <p class="font-bold text-gray-800 dark:text-white"><%= order.orderNumber %></p>
                </div>
                <span class="px-2 py-1 rounded text-xs font-semibold whitespace-nowrap
                  <% if (order.status === 'Order Placed') { %>
                    bg-gray-200 dark:bg-gray-600 text-gray-800 dark:text-white
                  <% } else if (order.status === 'Cutting') { %>
                    bg-yellow-200 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200
                  <% } else if (order.status === 'In Stitching') { %>
                    bg-blue-200 dark:bg-blue-900 text-blue-800 dark:text-blue-200
                  <% } else if (order.status === 'Final Touches') { %>
                    bg-purple-200 dark:bg-purple-900 text-purple-800 dark:text-purple-200
                  <% } else if (order.status === 'Ready for Pickup') { %>
                    bg-green-200 dark:bg-green-900 text-green-800 dark:text-green-200
                  <% } %>
                ">
                  <%= order.status %>
                </span>
              </div>

              <div class="grid grid-cols-2 gap-3 text-xs">
                <div>
                  <p class="text-gray-500 dark:text-gray-400">Customer</p>
                  <p class="font-medium text-gray-800 dark:text-white"><%= order.customer.name %></p>
                  <p class="text-gray-500 dark:text-gray-400"><%= order.customer.phone %></p>
                </div>
                <div>
                  <p class="text-gray-500 dark:text-gray-400">Garment</p>
                  <p class="font-medium text-gray-800 dark:text-white"><%= order.garmentType %></p>
                </div>
              </div>

              <div class="text-xs">
                <p class="text-gray-500 dark:text-gray-400">Due Date</p>
                <p class="font-medium text-gray-800 dark:text-white"><%= order.dueDate ? new Date(order.dueDate).toLocaleDateString() : 'Not set' %></p>
              </div>

              <a href="/tailor/orders/<%= order._id %>" class="block w-full bg-teal-600 hover:bg-teal-700 text-white font-medium py-2 rounded text-center text-sm">
                View Order
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('../partials/footer') %>
</body>
</html>
